/**index.wxss**/

.pageHead {
  margin-top: 40rpx;
}

.main {
  font-size: 14pt;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.imageIcon2 {
  width: 108rpx;
  height: 108rpx;
}

.imageIcon1 {
  width: 48rpx;
  height: 48rpx;
  margin-left: 20rpx;
}

.imageIcon {
  width: 64rpx;
  height: 64rpx;
}
 

.imageBtnView {
  width: 200rpx;
  text-align: right;
}

.oriview {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-bottom: 16rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #d0d0d0;
  padding: 20rpx;
}

.oritextarea {
  font-size: 14pt;
  height: 230rpx;
}

.oritext {
  background-color: #fff;
}

.oriBtnView {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tranView {
  flex: 1;
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content:  space-between;
  font-size: 14pt;
}

.tranResult {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tranText {
  width: 700rpx;
  margin-bottom: 10rpx;
}

.tranSoundView {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-right: 20rpx;
}
 
 

.speakView {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.03);
  z-index: 999;
}

.speakView .speak-style {
  background: #06af9a;
  height: 240rpx;
  width: 240rpx;
  border-radius: 20rpx;
  margin-top: 42%;
  margin-left: 50%;
  transform: translate3d(-50%, -50%, 0);
  overflow: hidden;
}

.speak-style .sound-style {
  position: absolute;
  width: 74rpx;
  height: 150rpx;
  margin-top: 45rpx;
  margin-left: 83rpx;
}
